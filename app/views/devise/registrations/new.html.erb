<div class="max-w-6xl mx-auto my-16">
  <div class="border rounded-lg bg-gray-50 p-16">
    <h2 class="text-center text-2xl font-bold mb-8"><%= t('.sign_up') %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render 'devise/shared/error_messages', resource: resource %>

      <div class="space-y-6">
        <div class="field">
          <%= f.label :name, class: 'block text-md font-medium text-gray-700' %><br>
          <%= f.text_field :name, autofocus: true, autocomplete: 'name', class: 'w-full p-2 border rounded-lg' %>
        </div>

        <div class="field">
          <%= f.label :email, class: 'block text-md font-medium text-gray-700' %><br>
          <%= f.email_field :email, autocomplete: 'email', class: 'w-full p-2 border rounded-lg' %>
        </div>

        <div class="field">
          <div class="flex items-center">
            <%= f.label :password, class: 'block text-md font-medium text-gray-700' %>
            <% if @minimum_password_length %>
              <span class="text-md text-gray-700"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></span>
            <% end %>
          </div>
          <%= f.password_field :password, autocomplete: 'new-password', class: 'w-full p-2 border rounded-lg mt-6' %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: 'block text-md font-medium text-gray-700' %><br>
          <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'w-full p-2 border rounded-lg' %>
        </div>

        <div class="actions flex justify-center ">
          <%= f.submit t('.sign_up'), class: 'w-full max-w-xs bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 rounded-full' %>
        </div>
      </div>
    <% end %>

    <div class="relative flex items-center justify-center my-10 max-w-xs mx-auto">
      <div class="absolute w-full border-t border-gray-700"></div>
      <div class="relative bg-gray-50 px-4 text-sm text-gray-700">または</div>
    </div>

    <div class="text-center my-10">
      <%= button_to user_google_oauth2_omniauth_authorize_path,
                    method: :post,
                    data: { turbo: false },
                    class: 'flex items-center justify-center gap-2 px-4 py-2 w-full
                           max-w-xs mx-auto border border-gray-300 rounded-lg
                           shadow-sm hover:bg-gray-100 transition' do %>
        <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48">
          <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z" />
          <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z" />
          <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z" />
          <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z" />
        </svg>
        <span><%= t('.google_sign_up') %></span>
      <% end %>
    </div>

    <div class="text-center mt-8">
      <%= link_to t('.didn_t_receive_confirmation_instructions'), new_confirmation_path(resource_name), class: 'text-blue-500' %><br>
    </div>
  </div>
</div>
