<div class="w-full md:w-1/2 lg:w-1/3 px-2 mb-4"> <!-- 幅と余白を追加 -->
  <div class="border rounded-lg bg-white">
    <div class="p-4 flex items-center">
      <span class="font-semibold"><%= post.user.name %>さんの SUKI</span>
    </div>

    <div class="px-4">
      <h4 class="text-lg font-bold text-center">
        <%= link_to post.title, post_path(post) %>
      </h4>
    </div>
    <div class="mt-3">
      <% if post.image.present? %>
        <%= image_tag post.image.mini.url, class: ' object-cover rounded-lg' %>
      <% elsif post.post_videos.present? %>
        <div class="w-full aspect-video">
          <%= image_tag "https://img.youtube.com/vi/#{post.post_videos.first.youtube_url.to_s[0..10]}/hqdefault.jpg",
                        width: '100%',
                        height: '100%',
                        class: 'rounded-lg',
                        alt: 'YouTube動画のサムネイル' %>
        </div>
      <% else %>
        <div class="w-full h-48 bg-gray-300 flex items-center justify-center rounded-lg">
          <span class="text-gray-600 text-lg">写真</span>
        </div>
      <% end %>
      <% if post.categories.present? %>
        <div class="mt-2 space-y-1">
          <% post.categories.each do |category| %>
            <div class="inline-block px-2 py-1 bg-gray-100 rounded-md text-sm">
              <%= category.name %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="p-4">
      <%= render 'likes/like_buttons', { likeable: post } %>
    </div>
  </div>
</div>
