<div class="w-full lg:w-1/3 mb-3">
  <div class="border rounded-lg bg-white">
    <%= image_tag "post_placeholder.png", class: "w-full h-48 object-cover rounded-t-lg", width: "300", height: "200" %>
    <div class="p-4">
      <div class="flex items-center">
        <h4 class="text-lg">
          <%= link_to post.title, '#' %>
        </h4>
        <div class="ml-auto flex space-x-2">
          <%= link_to '#' do %>
            <!-- 編集アイコンの代わりにプレースホルダー -->
            <span>Edit</span>
          <% end %>
          <%= link_to '#', method: :delete, data: { confirm: '' } do %>
            <!-- 削除アイコンの代わりにプレースホルダー -->
            <span>Delete</span>
          <% end %>
        </div>
      </div>
      <ul class="mt-2 text-sm space-y-1">
        <li class="flex items-center">
          <span><%= post.user.name %></span>
        </li>
        <li class="flex items-center">
          <span><%= l post.created_at, format: :short %></span>
        </li>
      </ul>
      <p class="mt-3">本文</p>
    </div>
  </div>
</div>
